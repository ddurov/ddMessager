<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232323">

    <TextView
        android:id="@+id/nameButtonDialog"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="4dp"
        android:text="default"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/messageButtonDialog"
        app:layout_constraintStart_toStartOf="@+id/messageButtonDialog" />

    <TextView
        android:id="@+id/messageButtonDialog"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="default"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateButtonDialog"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/messageButtonDialog"
        app:layout_constraintEnd_toEndOf="@+id/messageButtonDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>